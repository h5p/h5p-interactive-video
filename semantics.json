      },
      {
        "name": "continueWithVideo",
        "type": "text",
        "label": "Default label for continue video button",
        "default": "Continue with video",
        "optional": true
      },
      {
        "name": "playbackRate",
        "type": "text",
        "label": "Set playback rate",
        "default": "Playback Rate",
        "optional": true
      },
      {
        "name": "rewind10",
        "type": "text",
        "label": "Rewind 10 Seconds",
        "default": "Rewind 10 Seconds",
        "optional": true
      }
    ]
  }
]
